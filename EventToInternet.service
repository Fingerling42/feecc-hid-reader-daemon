[Unit]
Description=EventToInternet
After=NetworkManager.service time-sync.target
[Service]
ExecStart=/bin/sh -c "git pull; cp -f /etc/systemd/system/EventToInternet/EventToInternet.service /etc/systemd/system/EventToInternet.service; /bin/python3 /etc/systemd/system/EventToInternet/async_executor.py"
User=root
Type=simple
Restart=on-failure
RestartSec=1
[Install]
WantedBy=multi-user.target