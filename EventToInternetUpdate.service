[Unit]
Description=EventToInternet Automatic Updater
Wants=network-online.target
After=NetworkManager.service time-sync.target network.target network-online.target
[Service]
WorkingDirectory=/etc/systemd/system/EventToInternet
ExecStart=/bin/sh -c "/bin/bash update.bash"
User=root
Type=simple
Restart=on-failure
RestartSec=1
[Install]
WantedBy=multi-user.target
